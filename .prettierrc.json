{
  "overrides": [
    {
      "files": "*.{yml,yaml}",
      "options": {
        "printWidth": 100,
        "quoteProps": "as-needed",
        "singleQuote": false,
        "tabWidth": 2
      }
    },
    {
      "files": "*.md",
      "options": {
        "embeddedLanguageFormatting": "off",
        "printWidth": 100,
        "proseWrap": "preserve"
      }
    }
  ],
  "printWidth": 120,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "none",
  "useTabs": false
}
