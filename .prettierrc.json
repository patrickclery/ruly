{
  "tabWidth": 2,
  "useTabs": false,
  "printWidth": 120,
  "singleQuote": true,
  "trailingComma": "none",
  "overrides": [
    {
      "files": "*.{yml,yaml}",
      "options": {
        "tabWidth": 2,
        "printWidth": 100,
        "singleQuote": false,
        "quoteProps": "as-needed"
      }
    },
    {
      "files": "*.md",
      "options": {
        "printWidth": 100,
        "proseWrap": "preserve",
        "embeddedLanguageFormatting": "off"
      }
    }
  ]
}
